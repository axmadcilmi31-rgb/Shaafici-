import random
import os

def number_guess():
    number = random.randint(1, 50)
    attempts = 0
    print("\nğŸ® Number Guessing Game (1-50)")
    while True:
        try:
            guess = int(input("ğŸ”¢ Guess: "))
            attempts += 1
            if guess < number:
                print("ğŸ“‰ Too low!")
            elif guess > number:
                print("ğŸ“ˆ Too high!")
            else:
                print(f"ğŸ‰ Correct! You did it in {attempts} attempts.")
                break
        except:
            print("âŒ Please enter a number.")

def rock_paper_scissors():
    choices = ["âœŠ Rock", "âœ‹ Paper", "âœŒï¸ Scissors"]
    print("\nğŸ® Rock-Paper-Scissors Game")
    while True:
        user = input("Choose: (1) Rock (2) Paper (3) Scissors (4) Exit: ")
        if user == "4":
            break
        if user not in ["1", "2", "3"]:
            print("âŒ Invalid choice.")
            continue
        user_choice = choices[int(user)-1]
        comp_choice = random.choice(choices)
        print(f"ğŸ¤– Computer chose: {comp_choice}")
        if user_choice == comp_choice:
            print("ğŸŸ° Draw!")
        elif (user_choice == "âœŠ Rock" and comp_choice == "âœŒï¸ Scissors") or \
             (user_choice == "âœ‹ Paper" and comp_choice == "âœŠ Rock") or \
             (user_choice == "âœŒï¸ Scissors" and comp_choice == "âœ‹ Paper"):
            print("âœ… You win!")
        else:
            print("âŒ Computer wins!")

def main():
    while True:
        os.system("clear")
        print("="*40)
        print("          ğŸ® MY GAME HUB          ")
        print("="*40)
        print("1. Number Guessing Game")
        print("2. Rock-Paper-Scissors")
        print("3. Exit")
        choice = input("Select game (1-3): ")
        if choice == "1":
            number_guess()
        elif choice == "2":
            rock_paper_scissors()
        elif choice == "3":
            print("ğŸ‘‹ Goodbye!")
            break
        else:
            print("âŒ Invalid choice.")
        input("\nğŸ“Œ Press Enter to continue...")

if __name__ == "__main__":
    main()
